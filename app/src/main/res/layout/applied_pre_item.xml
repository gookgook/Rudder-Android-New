<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/appliedPartyItemCL"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:id="@+id/appliedPartyImageCV"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="34dp"
            app:cardCornerRadius="500dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/appliedPartyImageIV"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/appliedPreTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toEndOf="@+id/appliedPartyImageCV"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/appliedPreStatusTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/appliedPartyImageCV"
            app:layout_constraintTop_toBottomOf="@id/appliedPreTitleTV" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
